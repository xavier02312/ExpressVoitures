@model ExpressVoitures.Models.Voiture

@{
    ViewData["Title"] = "Delete";
}


<div class="container-sm mx-auto mt-4">
    <h3 class="text-danger">Êtes-vous sûr de vouloir le supprimer la voiture @Model.Marque @Model.Modele ?</h3>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodeVin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodeVin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Annee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Annee)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marque)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Modele)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modele)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Finition)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Finition)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateAchat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAchat)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrixAchat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrixAchat) €
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateDisponibiliteDeVente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateDisponibiliteDeVente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrixDeVente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrixDeVente) €
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateDeVente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateDeVente)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-outline-danger" /> |
        <a class="btn btn-outline-info" asp-action="Index">Retour à la liste</a>
    </form>
</div>
