@model ExpressVoitures.Models.Voiture

@{
    ViewData["Title"] = "Edit";
}

<h4 class="mt-2 text-center">Modifier la Voiture</h4>
<hr />
<div class="row">
    <div class="col-4 mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CodeVin" class="control-label"></label>
                <input asp-for="CodeVin" class="form-control" />
                <span asp-validation-for="CodeVin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Annee" class="control-label"></label>
                <input asp-for="Annee" class="form-control" />
                <span asp-validation-for="Annee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marque" class="control-label"></label>
                <input asp-for="Marque" class="form-control" />
                <span asp-validation-for="Marque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modele" class="control-label"></label>
                <input asp-for="Modele" class="form-control" />
                <span asp-validation-for="Modele" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Finition" class="control-label"></label>
                <input asp-for="Finition" class="form-control" />
                <span asp-validation-for="Finition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAchat" class="control-label"></label>
                <input asp-for="DateAchat" class="form-control" />
                <span asp-validation-for="DateAchat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrixAchat" class="control-label"></label>
                <input asp-for="PrixAchat" class="form-control" />
                <span asp-validation-for="PrixAchat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDisponibiliteDeVente" class="control-label"></label>
                <input asp-for="DateDisponibiliteDeVente" class="form-control" />
                <span asp-validation-for="DateDisponibiliteDeVente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrixDeVente" class="control-label"></label>
                <input asp-for="PrixDeVente" class="form-control" />
                <span asp-validation-for="PrixDeVente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDeVente" class="control-label"></label>
                <input asp-for="DateDeVente" class="form-control" />
                <span asp-validation-for="DateDeVente" class="text-danger"></span>
            </div>
            <div class="form-group mt-1 text-center">
                <input type="submit" value="Sauver" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-1 text-center">
    <a class="btn btn-outline-info" asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

