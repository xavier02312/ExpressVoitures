@model ExpressVoitures.Models.Reparation

@{
    ViewData["Title"] = "Delete";
}

<h3 class="text-danger mt-4">Voulez-vous supprimer cette réparation?</h3>
<div>
    <h4>Reparation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeDeReparation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeDeReparation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoutsReparation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoutsReparation) €
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-idVoiture=@Model.IdVoiture>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-outline-danger" /> |
        <a class="btn btn-outline-info" asp-action="Index" asp-route-idVoiture=@Model.IdVoiture>Retour à la liste</a>
    </form>
</div>
