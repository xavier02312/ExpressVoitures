@model ExpressVoitures.Models.Reparation

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reparation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-idVoiture=@Model.IdVoiture>
            <input type="hidden" name="idVoiture" value="@ViewData["idVoiture"]" />
            <input type="hidden" name="idAnnonce" value="@ViewData["idAnnonce"]" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TypeDeReparation" class="control-label"></label>
                <input asp-for="TypeDeReparation" class="form-control" />
