@model ExpressVoitures.Models.VoitureImage

@{
    ViewData["Title"] = "Create";
}

<h4 class="mt-4">Creation d'une Image pour une voiture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LienPhoto" class="control-label"></label>
                <input asp-for="LienPhoto" class="form-control" />
                <span asp-validation-for="LienPhoto" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="Valider" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info mt-1" asp-action="Index">retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
